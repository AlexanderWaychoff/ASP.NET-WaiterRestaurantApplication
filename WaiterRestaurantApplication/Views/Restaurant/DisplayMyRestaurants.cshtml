@using WaiterRestaurantApplication.Models;
@model IEnumerable<WaiterRestaurantApplication.Models.Restaurant>

@{
    ViewBag.Title = "My Restaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Restaurants</h2>
<div class="alert alert-info" role="alert" id="infoMessage" style="display: none;">@ViewBag.infoMessage</div>
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-6">
            <div class="well">
                <p class="text-center">You are a confirmed employee at the following restaurants.<br />Click to manage wait lists.</p>
                @foreach (Restaurant restaurant in Model)
                {
                <p>
                    @Html.ActionLink("Manage " + @restaurant.RestaurantName + " Wait List", "Index", "TableVisit", routeValues: new { restaurantId = @restaurant.RestaurantId }, htmlAttributes: new { @class = "btn btn-default btn-block" })
                </p>
                }
            </div>
        </div>
    </div>
}
else {
    <p>You are not a confirmed employee at one of our member restaurants.</p>
}
<hr />
<p>
    @Html.ActionLink("Confirm your Employment", "ConfirmEmployment", "Restaurant", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
</p>

<script type="text/javascript">
        $(document).ready(function () {
            console.log($("#infoMessage").text().length);
            if ($("#infoMessage").text().length > 0) {
                $("#infoMessage").fadeIn();
            }
        });
</script>
