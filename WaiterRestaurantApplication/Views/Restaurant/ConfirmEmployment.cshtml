@using WaiterRestaurantApplication.Models;
@model IEnumerable<WaiterRestaurantApplication.Models.Restaurant>

@{
    ViewBag.Title = "ConfirmEmployment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Confirm Employment</h2>

@if (Model.Count() > 0)
{
    <h3>Select your restaurant:</h3>
    using (Html.BeginForm())
    {
        <div class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-md-2">Restaurant Name</label>
                <div class="col-md-10">
                    <select class="form-control" name="restaurantId">
                        @foreach (Restaurant restaurant in Model)
                        {
                            <option value="@restaurant.RestaurantId">@restaurant.RestaurantName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Confirm Employment" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

}
else
{
    <p>We do not currently have any member restaurants.</p>
}