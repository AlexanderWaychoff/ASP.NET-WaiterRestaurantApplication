@using WaiterRestaurantApplication.Models;
@model IEnumerable<WaiterRestaurantApplication.Models.Restaurant>

@{
    ViewBag.Title = "My Restaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Restaurants</h2>

<p>
    @Html.ActionLink("Add Restaurant", "Create", null, new {@class="btn btn-primary" })
</p>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>
                Name
            </th>
            <th>
                Open Time
            </th>
            <th>
                Close Time
            </th>
            <th>
                Active?
            </th>
            <th>
                #Diners Before Warning
            </th>
            <th>
                Grace Period (mins)
            </th>
            <th>
                Confirmed Employees
            </th>
            <th>
                Pending Employees
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (Restaurant restaurant in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => restaurant.RestaurantName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => restaurant.OpenTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => restaurant.CloseTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => restaurant.IsOpen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => restaurant.PeopleBeforeWarning)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => restaurant.GracePeriodMinutes)
                </td>
                <td>
                    @if (restaurant.ConfirmedEmployees.Count > 0)
                    {
                        @Html.ActionLink("Manage " + restaurant.ConfirmedEmployees.Count + " Employees", "ManageEmployees", new { restaurantId = restaurant.RestaurantId }, new { @class = "btn btn-warning btn-block btn-xs" })
                    }
                    else
                    {
                        <p class="text-danger"><small>No confirmed employees</small></p>
                    }
                </td>
                <td>
                    @if (restaurant.PendingEmployees.Count > 0)
                    {
                        @Html.ActionLink("Confirm " + restaurant.PendingEmployees.Count + " Employees", "ConfirmEmployees", new { restaurantId = restaurant.RestaurantId }, new { @class = "btn btn-success btn-block btn-xs" })
                    }
                    else
                    {
                        <p class="text-success"><small>None to confirm</small></p>
                    }
                </td>
                <td>
                    @Html.ActionLink("details", "Details", new { id = restaurant.RestaurantId }, new { @class = "btn btn-info btn-xs" })
                    @Html.ActionLink("edit", "Edit", new { id = restaurant.RestaurantId }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("delete", "Delete", new { id = restaurant.RestaurantId }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p class="text-danger">No restaurants found. Please add your restaurant.</p>
}
